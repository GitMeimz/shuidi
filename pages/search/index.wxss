/* pages/search/index.wxss */

.tabNav {
  width: 100%;
  white-space: nowrap;
  padding: 0 10rpx;
}

.tabNav .tabNavItem {
  margin-right: 50rpx;
  font-size: 26rpx;
  display: inline-block;
}

.tabNav .active {
  color: var(--themeColor);
  /* currentColor == 当前字体的颜色 */
  font-size: 30rpx;
  font-weight: bolder;
  padding-bottom: 6rpx;
  border-bottom: 8rpx solid orange;
}
